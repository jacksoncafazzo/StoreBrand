<h1>Hard Knocks University</h1>
<h3>List of Students:</h3>
<hr />
@if (Model.Count != 0)
  {
    <ul>
    @foreach (var student in Model)
    {
      <li><a href="/students/@studentName.GetId()">@studentName.GetName()</a> </li>
      <li><a href="/students/@dateOfEnrollment.GetId()">@dateOfEnrollment.GetName()</a> </li>
    }
    </ul>

  }
  else
  {
    <h1>No students to be found</h1>
  }

<form action="/students/delete" method="post">
 <button type="submit" name="button">Delete all students</button>
</form>

<h4><a href="/students/new">Add a new student</a></h4>
<h4><a href="/">Return home</a></h4>
